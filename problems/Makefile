# makefile

SOURCE_RN = ransom_note.cpp
SOURCE_TWONUM = add_two_numbers.cpp
SOURCE_TWOSUM = two_sum.cpp
SOURCE_FIRSTLAST = first_last_indices.cpp
SOURCE_PERM = permutation.cpp
SOURCE_SORTCOR = sort_colors.cpp
SOURCE_QUEUERES = queue_reconstruct_by_height.cpp
SOURCE_SINGLENUM = single_number.cpp

CMD = $(CXX) $? -Wall -std=c++14

RN: $(SOURCE_RN)
	$(CMD) -o output/ransom_note
run_RN:
	output/ransom_note

TWONUM: $(SOURCE_TWONUM)
	$(CMD) -o output/add_two_numbers
run_TWONUM:
	output/add_two_numbers

TWOSUM: $(SOURCE_TWOSUM)
	$(CMD) -o output/two_sum
run_TWOSUM:
	output/two_sum

FIRSTLAST: $(SOURCE_FIRSTLAST)
	$(CMD) -o output/first_last_indices
run_FIRSTLAST:
	output/first_last_indices

PERM: $(SOURCE_PERM)
	$(CMD) -o output/permutation
run_PERM:
	output/permutation

SORTCOR: $(SOURCE_SORTCOR)
	$(CMD) -o output/sort_colors
run_SORTCOR:
	output/sort_colors

QUEUERES: $(SOURCE_QUEUERES)
	$(CMD) -o output/queue_reconstruct_by_height
run_QUEUERES:
	output/queue_reconstruct_by_height

SINGLENUM: $(SOURCE_SINGLENUM)
	$(CMD) -o output/single_number
run_SINGLENUM:
	output/single_number
